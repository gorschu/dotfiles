configuration {
	width: 40;
	lines: 8;
	font: "Monospace 11";
	padding: 1;
	terminal: "kitty";
	ssh-client: "ssh";
	ssh-command: "{terminal} -e "{ssh-client} {host}"";
	run-command: "{cmd}";
	run-shell-command: "{terminal} -e "{cmd}"";
	theme: "dracula1";
	fake-transparency: true;
	display-window: "window>";
	display-run: "run>";
	display-ssh: "ssh>";
	display-drun: "drun>";
}

window {
    location: south;
    anchor: south;
    }
