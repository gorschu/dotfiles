# style name or JSON path (default "auto")
{{ if eq .colorscheme.name "catppuccin" }}
style: "{{ .chezmoi.homeDir }}/.config/glow/themes/catppuccin-{{ .colorscheme.flavor }}.json"
{{ else if eq .colorscheme.name "tokyonight" }}
style: "{{ .chezmoi.homeDir }}/.config/glow/themes/tokyonight_{{ .colorscheme.flavor }}.json"
{{ else }}
style: "auto"
{{ end }}
# mouse support (TUI-mode only)
mouse: false
# use pager to display markdown
pager: false
# word-wrap at width
width: 80
