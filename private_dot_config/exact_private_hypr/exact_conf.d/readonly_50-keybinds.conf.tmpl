$terminal = kitty --single-instance
$fileManager = dolphin
$mainMod = SUPER

bind = $mainMod, Return, exec, $terminal
bind = $mainMod, Q, killactive,
bind = $mainMod SHIFT, Q, exec, uwsm stop
bind = $mainMod, E, exec, $fileManager
bind = $mainMod SHIFT, T, togglefloating,
bind = $mainMod, P, pseudo,

bind = $mainMod SHIFT, M, layoutmsg, swapwithmaster

# Launcher
{{- if lookPath "dms" }}
bind = $mainMod, Space, exec, dms ipc call spotlight toggle
{{- else }}
bind = $mainMod, Space, exec, vicinae toggle
{{- end }}

# Clipboard
{{- if lookPath "dms" }}
bind = $mainMod, V, exec, dms ipc call clipboard toggle
{{- else }}
bind = $mainMod, V, exec, cliphist list | fuzzel -d | cliphist decode | wl-copy
{{- end }}

# Lock
{{- if lookPath "dms" }}
bind = $mainMod ALT, L, exec, dms ipc call lock lock
{{- else }}
bind = $mainMod ALT, L, exec, hyprlock
{{- end }}

# Screenshots
{{- if lookPath "dms" }}
bind = ,Print, exec, dms screenshot
bind = CTRL, Print, exec, dms screenshot full
bind = ALT, Print, exec, dms screenshot window
{{- else }}
bind = ,Print, exec, hyprshot -m output
bind = $mainMod, Print, exec, hyprshot -m window
{{- end }}

# Fullscreen
bind = $mainMod, F, fullscreen, 1
bind = $mainMod SHIFT, F, fullscreen, 0

# Window grouping (Alt prefix)
bind = ALT, W, togglegroup,
bind = ALT, Tab, changegroupactive, f
bind = ALT SHIFT, Tab, changegroupactive, b
bind = ALT, h, changegroupactive, b
bind = ALT, l, changegroupactive, f
bind = ALT SHIFT, h, moveintogroup, l
bind = ALT SHIFT, l, moveintogroup, r
bind = ALT SHIFT, k, moveintogroup, u
bind = ALT SHIFT, j, moveintogroup, d
bind = ALT SHIFT, W, moveoutofgroup,

{{- if lookPath "dms" }}

# DMS-only binds
bind = $mainMod, N, exec, dms ipc call notifications toggle
bind = $mainMod SHIFT, N, exec, dms ipc call notepad toggle
bind = $mainMod, Y, exec, dms ipc call dankdash wallpaper
bind = $mainMod, M, exec, dms ipc call processlist focusOrToggle
bind = $mainMod, Tab, exec, dms ipc call hypr toggleOverview
bind = $mainMod, X, exec, dms ipc call powermenu toggle
bind = $mainMod SHIFT, Slash, exec, dms ipc call keybinds toggle hyprland
bind = $mainMod SHIFT, W, exec, dms ipc call window-rules toggle
bind = CTRL SHIFT, R, exec, dms ipc call workspace-rename open
bind = CTRL ALT, Delete, exec, dms ipc call processlist focusOrToggle
bindel = CTRL, XF86AudioRaiseVolume, exec, dms ipc call mpris increment 3
bindel = CTRL, XF86AudioLowerVolume, exec, dms ipc call mpris decrement 3
{{- end }}

# Move focus
bind = $mainMod, h, movefocus, l
bind = $mainMod, l, movefocus, r
bind = $mainMod, k, movefocus, u
bind = $mainMod, j, movefocus, d

# Move windows
bind = $mainMod SHIFT, h, movewindow, l
bind = $mainMod SHIFT, l, movewindow, r
bind = $mainMod SHIFT, k, movewindow, u
bind = $mainMod SHIFT, j, movewindow, d

# Switch workspaces
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Move active window to workspace
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# Special workspaces
bind = $mainMod, S, togglespecialworkspace, magic
bind = $mainMod SHIFT, S, movetoworkspace, special:magic

# 1Password
bind = $mainMod SHIFT, P, exec, 1password --toggle
bind = $mainMod SHIFT, Space, exec, 1password --quick-access

# Scroll through workspaces
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

# Move/resize with mouse
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Multimedia keys
{{- if lookPath "dms" }}
bindel = ,XF86AudioRaiseVolume, exec, dms ipc call audio increment 3
bindel = ,XF86AudioLowerVolume, exec, dms ipc call audio decrement 3
bindl = ,XF86AudioMute, exec, dms ipc call audio mute
bindl = ,XF86AudioMicMute, exec, dms ipc call audio micmute
bindel = ,XF86MonBrightnessUp, exec, dms ipc call brightness increment 5 ""
bindel = ,XF86MonBrightnessDown, exec, dms ipc call brightness decrement 5 ""
{{- else }}
bindel = ,XF86AudioRaiseVolume, exec, wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+
bindel = ,XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindl = ,XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindl = ,XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindel = ,XF86MonBrightnessUp, exec, brightnessctl s 10%+
bindel = ,XF86MonBrightnessDown, exec, brightnessctl s 10%-
{{- end }}

# Media player controls
{{- if lookPath "dms" }}
bindl = ,XF86AudioNext, exec, dms ipc call mpris next
bindl = ,XF86AudioPause, exec, dms ipc call mpris playPause
bindl = ,XF86AudioPlay, exec, dms ipc call mpris playPause
bindl = ,XF86AudioPrev, exec, dms ipc call mpris previous
{{- else }}
bindl = ,XF86AudioNext, exec, playerctl next
bindl = ,XF86AudioPause, exec, playerctl play-pause
bindl = ,XF86AudioPlay, exec, playerctl play-pause
bindl = ,XF86AudioPrev, exec, playerctl previous
{{- end }}
