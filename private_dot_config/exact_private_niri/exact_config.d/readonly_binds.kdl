binds {
  Mod+Shift+q repeat=false { close-window; }

  // Fix consume/expel for German keyboard (brackets don't work)
  Mod+Comma  { consume-or-expel-window-left; }
  Mod+Period { consume-or-expel-window-right; }

  // Fix hotkey overlay (Shift+/ doesn't work on German layout)
  Mod+F1 { show-hotkey-overlay; }

  // Fix window sizing for German keyboard (= key doesn't exist)
  Mod+Plus { set-column-width "+10%"; }
  Mod+Shift+Plus { set-window-height "+10%"; }

  Mod+Return hotkey-overlay-title="Open Terminal" { spawn "ghostty"; }

  // 1Password keybinds
  Mod+Shift+Space hotkey-overlay-title="1Password Quick Access" { spawn "1password" "--quick-access"; }
  Mod+Shift+P hotkey-overlay-title="1Password Toggle" { spawn "1password" "--toggle"; }
}
