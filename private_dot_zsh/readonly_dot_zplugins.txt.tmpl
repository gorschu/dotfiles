# oh-my-zsh specific
getantidote/use-omz        # handle OMZ dependencies
ohmyzsh/ohmyzsh path:lib   # load OMZ's library

# vi/vim keybindings with custom escape (jk)
jeffreytse/zsh-vi-mode

# completions
mattmc3/zephyr path:plugins/completion
zsh-users/zsh-completions kind:fpath path:src
$ZDOTDIR/.zsh_completions.d kind:fpath

# load .zsh files in $ZDOTDIR/.zshrc.d (replaces zephyr's confd system)
mattmc3/zshrc.d

mattmc3/zephyr path:plugins/directory   # directory aliases and functions
mattmc3/zephyr path:plugins/color       # color setup and theming
mattmc3/zephyr path:plugins/environment # environment variables
mattmc3/zephyr path:plugins/utility     # utility functions
mattmc3/zephyr path:plugins/zfunctions  # function path management

# distribution specific
{{ if hasKey .chezmoi.osRelease "id" }}
  {{ if eq .chezmoi.osRelease.id "ubuntu" }}
  ohmyzsh/ohmyzsh path:plugins/ubuntu
  {{ else if eq .chezmoi.osRelease.id "debian" }}
  ohmyzsh/ohmyzsh path:plugins/debian
  {{ else if eq .chezmoi.osRelease.id "opensuse-leap" "opensuse-tumbleweed" }}
  ohmyzsh/ohmyzsh path:plugins/suse
  {{ else if eq .chezmoi.osRelease.id "fedora" }}
  ohmyzsh/ohmyzsh path:plugins/dnf
  {{ else if eq .chezmoi.osRelease.id "arch" }}
  ohmyzsh/ohmyzsh path:plugins/archlinux
  {{ end }}
{{ end }}

# general utilities
ohmyzsh/ohmyzsh path:plugins/sudo       # double-Esc prefix with sudo
ohmyzsh/ohmyzsh path:plugins/magic-enter  # smart Enter: runs ls/git status on empty line
ohmyzsh/ohmyzsh path:plugins/extract    # universal extract() for any archive type
ohmyzsh/ohmyzsh path:plugins/vscode     # VS Code integration
ohmyzsh/ohmyzsh path:plugins/rsync      # rsync helpers and aliases

# file listing and system tools
ohmyzsh/ohmyzsh path:plugins/eza        # modern ls replacement with git-status
ohmyzsh/ohmyzsh path:plugins/gnu-utils  # GNU utils wrappers for BSD
ohmyzsh/ohmyzsh path:plugins/ripgrep kind:fpath
ohmyzsh/ohmyzsh path:plugins/mise       # polyglot version manager

# git and version control
ohmyzsh/ohmyzsh path:plugins/git        # essential git aliases
ohmyzsh/ohmyzsh path:plugins/1password  # 1Password CLI integration
ohmyzsh/ohmyzsh path:plugins/github     # GitHub CLI helpers
ohmyzsh/ohmyzsh path:plugins/git-auto-fetch
ohmyzsh/ohmyzsh path:plugins/git-escape-magic  # smart quoting for git
ohmyzsh/ohmyzsh path:plugins/git-extras
ohmyzsh/ohmyzsh path:plugins/git-flow-avh
ohmyzsh/ohmyzsh path:plugins/git-lfs
bigH/git-fuzzy path:bin kind:path       # fuzzy interactive git operations

# development languages
ohmyzsh/ohmyzsh path:plugins/python     # Python virtualenv and aliases
ohmyzsh/ohmyzsh path:plugins/pyenv      # Python version management
ohmyzsh/ohmyzsh path:plugins/pip        # pip aliases
ohmyzsh/ohmyzsh path:plugins/golang     # Go/Golang support
ohmyzsh/ohmyzsh path:plugins/npm        # Node package manager

# devops and infrastructure
ohmyzsh/ohmyzsh path:plugins/systemadmin
ohmyzsh/ohmyzsh path:plugins/systemd
ohmyzsh/ohmyzsh path:plugins/ansible
ohmyzsh/ohmyzsh path:plugins/helm
ohmyzsh/ohmyzsh path:plugins/kubectl
ohmyzsh/ohmyzsh path:plugins/gh kind:fpath

{{ if .is_work_machine }}
ohmyzsh/ohmyzsh path:plugins/gpg-agent  # work machine only
{{ end }}

# interactive and keybindings
mdumitru/fancy-ctrl-z     # better Ctrl-Z job suspension/resumption

# syntax highlighting (load last)
zdharma-continuum/fast-syntax-highlighting
hlissner/zsh-autopair
